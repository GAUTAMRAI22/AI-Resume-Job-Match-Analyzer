backend/app/main.py
from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from app.api import resume, auth

app = FastAPI(title="AI Resume Job Match Analyzer")

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_methods=["*"],
    allow_headers=["*"],
)

app.include_router(auth.router, prefix="/auth", tags=["Auth"])
app.include_router(resume.router, prefix="/resume", tags=["Resume"])

@app.get("/")
def root():
    return {"message": "AI Resume Job Match Analyzer API"}


backend/app/api/resume.py
from fastapi import APIRouter, UploadFile, File, Form
from app.services.parser import parse_resume
from app.services.matcher import calculate_match_score

router = APIRouter()

@router.post("/analyze")
async def analyze_resume(
    resume: UploadFile = File(...),
    job_description: str = Form(...)
):
    resume_text = await parse_resume(resume)
    result = calculate_match_score(resume_text, job_description)

    return result


backend/app/services/parser.py
from PyPDF2 import PdfReader
from docx import Document

async def parse_resume(file):
    if file.filename.endswith(".pdf"):
        reader = PdfReader(file.file)
        return " ".join([p.extract_text() for p in reader.pages])

    elif file.filename.endswith(".docx"):
        doc = Document(file.file)
        return " ".join([p.text for p in doc.paragraphs])

    return ""


backend/app/services/matcher.py
from sentence_transformers import SentenceTransformer
from sklearn.metrics.pairwise import cosine_similarity

model = SentenceTransformer("all-MiniLM-L6-v2")

def calculate_match_score(resume_text, jd_text):
    embeddings = model.encode([resume_text, jd_text])
    score = cosine_similarity([embeddings[0]], [embeddings[1]])[0][0]

    return {
        "match_score": round(score * 100, 2),
        "missing_skills": ["Docker", "AWS", "System Design"],
        "suggestions": "Add measurable achievements and optimize keywords"
    }


backend/app/api/auth.py
from fastapi import APIRouter

router = APIRouter()

@router.post("/login")
def login():
    return {"token": "dummy-jwt-token"}


backend/app/models/database.py
from sqlalchemy import create_engine
from sqlalchemy.orm import sessionmaker

DATABASE_URL = "postgresql://postgres:password@localhost:5432/resume_ai"

engine = create_engine(DATABASE_URL)
SessionLocal = sessionmaker(bind=engine)


